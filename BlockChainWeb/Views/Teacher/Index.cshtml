@model WebModel
@{
    ViewData["Title"] = "Index";
}
    <div>
        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
    </div>
<h1>Teacher</h1>

<div class="form ">
    <form method="post" asp-controller="Teacher" asp-action="SetValuation">

        <div class="inputBox">
            <label asp-for="Subject"></label>
            <select asp-for="Subject">
                @foreach(var item in Model.Subjects) {
                    <option value="@item.Name">@item.Name</option>
                }
            </select>
        </div>

        <div class="inputBox">
            <label asp-for="Group"></label>
            <select asp-for="Group">
                @foreach(var item in Model.Groups) {
                    <option value="@item.Number">@item.Number</option>
                }
            </select>
        </div>

        <div class="inputBox">
            <input type="submit" value="Set valuation" />
        </div>
        <input asp-for="Id" value="@Model.Id" type="hidden" />
        <input asp-for="Role" value="@Model.Role" type="hidden">
        <input asp-for="Subjects" value="@Model.Subjects" type="hidden">
        <input asp-for="Groups" value="@Model.Groups" type="hidden">
    </form>
</div>

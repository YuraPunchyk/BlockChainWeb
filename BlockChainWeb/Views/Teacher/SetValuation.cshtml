@model WebModel
@{
    ViewData["Title"] = "SetValuation";
}

<h1>Set valuation</h1>

<div class="form ">
    <form method="post" asp-controller="Teacher" asp-action="SetStudentsValuation">

        <div class="inputBox">
            <label asp-for="Description"></label>
            <input asp-for="Description" type="text" />
        </div>

        <div class="inputBox">
            <label asp-for="StudentIds"></label>
            <select asp-for="StudentIds" multiple>
                @foreach(var item in Model.Students) {
                    <option id="@item.Id">@item.FullName</option>
                }
            </select>
        </div>

        <div class="inputBox">
            <label asp-for="Amount"></label>
            <input asp-for="Amount"/>
        </div>

        <div class="inputBox">
            <input type="submit" value="Set valuation" />
        </div>

    </form>
</div>
